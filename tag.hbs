{{!< default}}
<div class="tag_head_wrap">
    {{#tag}}
    <div class="tag_heading text-center">
        {{#if feature_image}}<img src="{{img_url feature_image}}" alt="{{name}}" title="{{name}}" class="tag-image" />{{/if}}
        <h1 class="text-center tag-title">{{name}}</h1>
        {{#if description}}<p class="tag-description">{{description}}</p>{{/if}}
    </div>
    {{/tag}}
</div>
<hr class="fancy-hr" />
<div class="main-content content-wrap">
    {{> 'post/card-basic'}}
    {{#if pagination}}
     {{pagination}}
    {{/if}}
</div>